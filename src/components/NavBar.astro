---
const { pathname } = Astro.url;

const links = [
    { href: '/', label: 'Home' },
    { href: '/work', label: 'Work' },
    { href: '/about', label: 'About' }
];
---

<nav class="relative py-6">
    <!-- Brand section -->
    <div class="absolute left-6 top-1/2 -translate-y-1/2 flex items-center gap-2">
        <img src="/icon.svg" alt="Logo" class="w-6 h-6" />
        <span class="text-lg font-semibold text-gray-800">Nigel Andrew</span>
    </div>

    <!-- Centered nav -->
    <ul class="flex justify-center">
        <li class="bg-gray-100 rounded-full px-3 py-2 flex gap-1 sm:gap-3 shadow-sm border border-gray-200">
            {links.map(link => {
                const isActive = pathname === link.href;
                return (
                        <a
                                href={link.href}
                                class={`px-4 py-1.5 rounded-full text-sm font-medium transition-colors ${
                                    isActive
                                        ? 'bg-blue-600 text-white'
                                        : 'text-gray-700 hover:bg-gray-200'
                                }`}
                        >
                            {link.label}
                        </a>
                );
            })}
        </li>
    </ul>
</nav>
